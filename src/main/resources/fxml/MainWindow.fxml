<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.PavelKisliuk.controller.MainWindowController">
    <children>
        <TreeTableView fx:id="mainTreeTableView" editable="true" focusTraversable="false" prefHeight="200.0" prefWidth="400.0">
            <columns>
                <TreeTableColumn fx:id="nameTreeTableColumn" prefWidth="250.0" text="Name" />
                <TreeTableColumn fx:id="ageTreeTableColumn" minWidth="0.0" prefWidth="2.0" text="Age" />
                <TreeTableColumn fx:id="birthdayTreeTableColumn" prefWidth="75.0" text="Birthday" />
            </columns>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <columnResizePolicy>
                <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TreeTableView>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
            <children>
                <Button fx:id="addButton" focusTraversable="false" mnemonicParsing="false" prefHeight="30.0" prefWidth="70.0" text="Add">
                    <font>
                        <Font name="Times New Roman" size="16.0" />
                    </font>
                </Button>
                <Button fx:id="editButton" focusTraversable="false" mnemonicParsing="false" prefHeight="30.0" prefWidth="70.0" text="Edit">
                    <font>
                        <Font name="Times New Roman" size="16.0" />
                    </font>
                </Button>
                <Button fx:id="deleteButton" focusTraversable="false" mnemonicParsing="false" prefHeight="30.0" prefWidth="70.0" text="Delete">
                    <font>
                        <Font name="Times New Roman" size="16.0" />
                    </font>
                </Button>
            </children>
        </HBox>
      <TableView fx:id="TV" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="TC1" prefWidth="75.0" text="C1" />
          <TableColumn fx:id="TC2" prefWidth="75.0" text="C2" />
            <TableColumn fx:id="C3" prefWidth="75.0" text="Column X" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
    </children>
</VBox>
