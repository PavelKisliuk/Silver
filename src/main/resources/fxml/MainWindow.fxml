<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.PavelKisliuk.controller.MainWindowController">
    <children>
        <TreeTableView fx:id="mainTreeTableView" editable="true" focusTraversable="false" prefHeight="200.0" prefWidth="500.0" stylesheets="@../css/rules.css">
            <columns>
                <TreeTableColumn fx:id="nameTreeTableColumn" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Name" />
                <TreeTableColumn fx:id="ageTreeTableColumn" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Age" />
                <TreeTableColumn fx:id="birthdayTreeTableColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Birthday" />
            </columns>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <columnResizePolicy>
                <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TreeTableView>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
            <children>
                <Button fx:id="addButton" focusTraversable="false" mnemonicParsing="false" prefHeight="30.0" prefWidth="70.0" stylesheets="@../css/rules.css" text="Add">
                    <font>
                        <Font name="Times New Roman" size="16.0" />
                    </font>
                </Button>
                <Button fx:id="editButton" focusTraversable="false" mnemonicParsing="false" prefHeight="30.0" prefWidth="70.0" stylesheets="@../css/rules.css" text="Edit">
                    <font>
                        <Font name="Times New Roman" size="16.0" />
                    </font>
                </Button>
                <Button fx:id="deleteButton" focusTraversable="false" mnemonicParsing="false" prefHeight="30.0" prefWidth="70.0" stylesheets="@../css/rules.css" text="Delete">
                    <font>
                        <Font name="Times New Roman" size="16.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
